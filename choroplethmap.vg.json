{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1500,
  "height": 600,
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jdan0003/lab19/main/custom.geo.topo.json",
        "format": {"type": "topojson", "feature": "custom.geo"}
      },
      "mark": {"type": "geoshape", "fill": "lightgrey", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jdan0003/FIT3179DataVis2/main/custom.geo.topo.json",
        "format": {"type": "topojson", "feature": "custom.geo"}
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/jdan0003/FIT3179DataVis2/main/starCount.csv"
            },
            "key": "Country",
            "fields": ["Country","totalStars", "averageStars"]
          }
        }
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "field": "averageStars",
          "type": "quantitative",
          "scale": {"type": "log"}
        },
        "tooltip": {"field": "Country"}
      }
    }
  ]
}